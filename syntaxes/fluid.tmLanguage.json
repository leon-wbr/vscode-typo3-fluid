{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fluid",
  "scopeName": "source.fluid",
  "fileTypes": ["html"],
  "patterns": [
    {
      "name": "comment.block.html",
      "begin": "(<f:comment(?:\\s[^>]*)?>)",
      "end": "(</f:comment>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.comment.html" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.comment.html" }
      },
      "patterns": [
        {
          "match": "[^<]+|<[^/]|<(?=[^f])",
          "name": "comment.block.html"
        }
      ]
    },
    {
      "include": "text.html.derivative"
    },
    {
      "include": "#fluid-tags"
    }
  ]
}
